extends layout

block content
  include loggedinNav.pug
  main
    .bar
      h2 Comanda Confirmată
    - var sum = 0
    - for (var i = 0; i < seats.length; i++)
      - var seatRow = seats[i][0]
      - var seatCol = seats[i][2]
      - var typeString
      - if (types[i] == '25') typeString = "25.00 RON (Adult)"; else typeString = "22.00 RON Student"
      - sum = sum + parseInt(types[i])
      section
        p
          b Cinema
          | :  #{currentBroadcast.houseName}
        p
          b Seat
          | : #{seatRow}#{seatCol}
        p
          b Film
          | : #{currentFilm.filmName}
        p
          b Categorie 
          | : #{currentFilm.category}
        p
          b Ziua și ora 
          | : #{currentBroadcast.date} #{currentBroadcast.time} (#{currentBroadcast.day})
        p
          b Prețul biletului 
          | : #{typeString}
    section(style='padding: 1rem 3rem;')
      h3 Total : #{sum}.00 RON

       a(href='/pdf/downloadpdf')
        button.form-button(type='button' name='download') Download PDF

            
      a(href='/main')
        button.form-button(type='button' name='okay') Continuă!

